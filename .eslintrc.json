{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["google"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["*.js"],
    "rules": {
        "new-cap": 0,
        "indent": ["error", 4],
        "no-unused-vars": 0
    }
}
